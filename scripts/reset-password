#!/bin/bash
set +e
DESTDIR=$(mktemp -d)
while [[ ! -b /dev/$disk ]] ; do
    echo $(ls /sys/block/* | grep "[0-9]$")
    echo -n "Rootfs partition >>> "
    read disk
done
umount -lf /dev/$disk 2>/dev/null || true
mount /dev/$disk "$DESTDIR"
#pass1=""
#pass2=""
while [[ "$pass1" != "$pass2" || "$pass1" == "" ]] ; do
    echo -n "Type new password >>>"
    read -s pass1 ; echo
    echo -n "Type password again >>>"
    read -s pass2 ; echo
done
if [[ "$user" == "" ]] ; then
    user=$(grep "^.*:x:1000:" "$DESTDIR"/etc/passwd | cut -f 1 -d ':')
fi
chroot "$DESTDIR" usermod -p $(openssl passwd -6 "$pass1") $user
umount -lf "$DESTDIR"
